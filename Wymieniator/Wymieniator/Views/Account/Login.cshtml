@model Wymieniator.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

<h2>Logowanie</h2>

<div class="row justify-content-center align-items-center" style="height:100vh">
    <div class="col-12 col-lg-4">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.ValidationMessage("loginerror", "")
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(o => o.Email, "E-mail:")
                        @Html.TextBoxFor(o => o.Email, new { @class = "form-control", placeholder = "Wprowadź email" })
                        @Html.ValidationMessageFor(o => o.Email, null, new { @class = "form-text text-muted" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(o => o.Password, "Hasło:")
                        @Html.PasswordFor(o => o.Password, new { @class = "form-control", placeholder = "Wprowadź hasło" })
                        @Html.ValidationMessageFor(o => o.Password, null, new { @class = "form-text text-muted" })
                    </div>

                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked", @class = "form-check-input" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <button type="submit" class="btn btn-primary">Zaloguj</button>
                }

                <div style="text-align: center;">
                    <a href="@Url.Action("Register")">Nie mam jeszcze konta</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}